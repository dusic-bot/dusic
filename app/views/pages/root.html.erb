<div class="root">
  <div class="root__content">
    <h1><%= t('.dusic') %></h1>
    <p><%= t('.description') %></p>
    <div class="root__content-buttons">
      <%= link_to t('.invite_to_server'), ApplicationHelper::BOT_INVITE_URL, class: 'root__content-button button' %>
    </div>
  </div>
</div>

<% content_for :packs do %>
  <%= stylesheet_pack_tag 'pages/root', 'data-turbolinks-track': 'reload' %>
<% end %>

<% content_for :meta do %>
  <%= title_tag t('.dusic') %>
  <meta name="description" content="<%= t('.description') %>">
  <meta name="robots" content="index, follow">
  <link rel="canonical" href="https://dusic.fizvlad.com/">

  <meta property="og:title" content="<%= t('.dusic') %>">
  <meta property="og:url" content="https://dusic.fizvlad.com/">
  <meta property="og:image" content="https://dusic.fizvlad.com/og_image.jpg">
  <meta property="og:type" content="website">
  <meta property="og:description" content="<%= t('.description') %>">
<% end %>
