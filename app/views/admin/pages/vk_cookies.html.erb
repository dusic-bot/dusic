<h1><%= t('.admin_features') %></h1>
<h3><%= t('.vk_cookies') %></h1>

<%= form_with method: :post, local: true do |f| %>
  <div class="form-group">
    <%= f.label :cookies, t('.cookies_label') %>
    <%= f.text_area :cookies, class: 'form-control', autocomplete: 'off' %>
  </div>
  <%= f.submit t('.execute_button'), class: 'btn btn-primary', disabled: VK_AUDIO_MANAGER.client_initialized? %>
<% end %>
